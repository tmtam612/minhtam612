@model QLXS.Models.DaiLy

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm Đại Lý</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Đại Lý</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group row">
            <div class="control-label col-md-2">
                @Html.LabelFor(model => model.TenDaiLy)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDaiLy, new { htmlAttributes = new { @class = "form-control",required=true } })
                @Html.ValidationMessageFor(model => model.TenDaiLy, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="control-label col-md-2">
                @Html.LabelFor(model => model.DiaChi)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập vào địa chỉ",required=true } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="control-label col-md-2">
                @Html.LabelFor(model => model.SDT)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control",required=true } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <p>

                    <input type="button" value="Back To List" class="btn btn-danger" onclick="location.href='@Url.Action("Index","DaiLies")'" />
                </p>
            </div>
            <div class="col-md-offset-2 col-md-2">
                <p align="right">
                    <input type="submit" value="Create" class="btn btn-success" />
                </p>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
