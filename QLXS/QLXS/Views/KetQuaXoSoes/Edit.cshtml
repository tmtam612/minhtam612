@model QLXS.Models.KetQuaXoSo

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh Sửa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Kết Quả Xổ Số</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaKetQua)

        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.MaLoaiVeSo, "Tỉnh", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                <p>
                    @Html.DropDownList("MaLoaiVeSo", null, htmlAttributes: new { @class = "form-control", required = true })
                    @Html.ValidationMessageFor(model => model.MaLoaiVeSo, "", new { @class = "text-danger" })
                </p>
                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Ngay, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                <p>
                    @Html.EditorFor(model => model.Ngay, new { htmlAttributes = new { @class = "form-control", required = true } })
                    @Html.ValidationMessageFor(model => model.Ngay, "", new { @class = "text-danger" })
                </p>
               
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.SoTrung, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                <p>
                    @Html.EditorFor(model => model.SoTrung, new { htmlAttributes = new { @class = "form-control", required = true } })
                    @Html.ValidationMessageFor(model => model.SoTrung, "", new { @class = "text-danger" })
                </p>
                
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="button" value="Back To List" class="btn btn-danger" onclick="location.href='@Url.Action("Index","KetQuaXoSoes")'" />
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

