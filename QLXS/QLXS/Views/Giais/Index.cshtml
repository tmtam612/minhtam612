@model PagedList.IPagedList<QLXS.Models.Giai>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách</h2>
@using (Html.BeginForm())
{
    <p>
        <label>Tìm Kiếm:</label> @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaGiai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().GiaiThuong)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaGiai)
            </td>
            <td>
                
                @Html.DisplayFor(modelItem => item.GiaiThuong)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaGiai }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaGiai }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaGiai })
            </td>
        </tr>
    }

</table>
