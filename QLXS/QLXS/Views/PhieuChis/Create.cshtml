@model QLXS.Models.PhieuChi

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Phiếu Chi</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Ngay, htmlAttributes: new { @class = "control-label" })
            </div>
            
            <div class="col-md-10">
                <p>
                    @Html.EditorFor(model => model.Ngay, new { htmlAttributes = new { @class = "form-control",required=true } })
                    @Html.ValidationMessageFor(model => model.Ngay, "", new { @class = "text-danger" })
                </p>
                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.TongTien, htmlAttributes: new { @class = "control-label" })
            </div>
            
            <div class="col-md-10">
                <p>
                    @Html.EditorFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control",required=true } })
                    @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger" })
                </p>
                
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <p>
                    <input type="button" value="Back To List" class="btn btn-danger" onclick="location.href='@Url.Action("Index","PhieuChis")'" />
                </p>
            </div>
            <div class="col-md-offset-2 col-md-2">
                <p align="right">
                    <input type="submit" value="Create" class="btn btn-success" />
                </p>
            </div>
        </div>
    </div>
}
