@model PagedList.IPagedList<QLXS.Models.PhieuChi>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách</h2>
@using (Html.BeginForm())
{
    <p>
        <label>Tìm Kiếm:</label> @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<p>
    @Html.ActionLink("Thêm Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model=>model.First().MaPhieuChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Ngay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TongTien)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaPhieuChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TongTien)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MaPhieuChi }) |
            @Html.ActionLink("Details", "Details", new { id = item.MaPhieuChi }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MaPhieuChi })
        </td>
    </tr>
    }

</table>
