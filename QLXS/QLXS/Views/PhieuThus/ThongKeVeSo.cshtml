         ['Tháng', 'Vé Số Phát Hành','Vé Số Bán Được'],
            ['Tháng 1', @VeSoPhatHanh[1],@VeSoDaBan[1]],
  ['Tháng 2', @VeSoPhatHanh[2],@VeSoDaBan[2]],
  ['Tháng 3', @VeSoPhatHanh[3],@VeSoDaBan[3]],
  ['Tháng 4', @VeSoPhatHanh[4],@VeSoDaBan[4]],
  ['Tháng 5', @VeSoPhatHanh[5],@VeSoDaBan[5]],
  ['Tháng 6', @VeSoPhatHanh[6],@VeSoDaBan[6]],
  ['Tháng 7', @VeSoPhatHanh[7],@VeSoDaBan[7]],
  ['Tháng 8', @VeSoPhatHanh[8],@VeSoDaBan[8]],
  ['Tháng 9', @VeSoPhatHanh[9],@VeSoDaBan[9]],
  ['Tháng 10', @VeSoPhatHanh[10],@VeSoDaBan[10]],
  ['Tháng 11', @VeSoPhatHanh[11],@VeSoDaBan[11]],
  ['Tháng 12', @VeSoPhatHanh[12],@VeSoDaBan[12]]
    ]);


    var options = { 'title': 'So Sánh Số Lượng Vé Số Phát Hành và Vé Số Đã Bán Theo Tháng Trong Năm', 'width': 1000, 'height':500};

    var chart = new google.visualization.ColumnChart(document.getElementById('chart_div2'));

    chart.draw(data, options);

}
</script>

